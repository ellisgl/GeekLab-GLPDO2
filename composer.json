{
    "name"              : "geeklab/glpdo2",
    "description"       : "The easy to use and better PDO Wrapper.",
    "minimum-stability" : "stable",
    "license"           : "MIT",
    "keywords"          : [
        "GeekLab"
    ],
    "authors"           : [
        {
            "name"  : "EllisGL",
            "email" : "name@domain.com"
        }
    ],
    "require"           : {
        "php" : ">=8.1"
    },
    "autoload"          : {
        "psr-4" : {
            "GeekLab\\GLPDO2\\" : "src"
        }
    },
    "autoload-dev"      : {
        "psr-4" : {
            "GeekLab\\" : "tests"
        }
    },
    "require-dev"       : {
        "phpunit/phpunit" : "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.9",
        "phpmd/phpmd": "^2.13"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=7",
        "phpcs" : "phpcs src/ --standard=PSR12 -n"
    }
}
