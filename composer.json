{
    "name"              : "geeklab/glpdo2",
    "description"       : "The easy to use and better PDO Wrapper.",
    "minimum-stability" : "stable",
    "license"           : "MIT",
    "keywords"          : [
        "GeekLab"
    ],
    "authors"           : [
        {
            "name"  : "EllisGL",
            "email" : "name@domain.com"
        }
    ],
    "require"           : {
        "php" : ">=7.2"
    },
    "autoload"          : {
        "psr-4" : {
            "GeekLab\\GLPDO2\\" : "src"
        }
    },
    "autoload-dev"      : {
        "psr-4" : {
            "GeekLab\\" : "tests"
        }
    },
    "require-dev"       : {
        "phpunit/phpunit" : "^8.1",
        "squizlabs/php_codesniffer": "^3.3",
        "phpstan/phpstan": "^0.11.8"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=7",
        "phpcs" : "phpcs src/ --standard=PSR2 -n"
    }
}